# Fast Dockerfile - CPU only, no CUDA
FROM ubuntu:22.04

WORKDIR /app

# Install Python and system dependencies
RUN apt-get update && apt-get install -y \
    python3.11 \
    python3.11-pip \
    python3.11-venv \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Create symlinks for python and pip
RUN ln -s /usr/bin/python3.11 /usr/bin/python && \
    ln -s /usr/bin/python3.11 /usr/bin/python3

# Upgrade pip
RUN python -m pip install --upgrade pip

# Copy requirements first for better layer caching
COPY requirements.txt .

# Install CPU-only versions of heavy packages
RUN python -m pip install --no-cache-dir --timeout 300 \
    --only-binary=all \
    torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cpu \
    && python -m pip install --no-cache-dir --timeout 300 \
    --only-binary=all \
    -r requirements.txt

# Copy the rest of the application
COPY . .

# Create necessary directories
RUN mkdir -p logs chroma_db

# Make scripts executable
RUN chmod +x upload_chroma_to_render.py setup_render_chroma.py reingest_on_render.py debug_env.py

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV CONFIG_PATH=configs/default.yaml
ENV PYTHONPATH=/app

# Expose the port (Render will set PORT environment variable)
EXPOSE $PORT

# Command to run the application
CMD ["python", "render_start.py"]
