FROM python:3.10-slim

WORKDIR /app

# Copy requirements first for better layer caching
COPY requirements.txt .

# Upgrade pip, setuptools, and wheel first
RUN pip install --upgrade pip setuptools wheel

# Install numpy first with pre-built wheels to avoid build issues
RUN pip install --only-binary=all --no-cache-dir numpy

# Install remaining dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of the application
COPY . .

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV CONFIG_PATH=configs/default.yaml

# Expose the API port
EXPOSE 8001

# Command to run the API server
CMD ["python", "-m", "uvicorn", "apps.api.main:app", "--host", "0.0.0.0", "--port", "8001"]
